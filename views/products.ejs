<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Products</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">All Products</h2>
   
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">Rating: <%= product.ratings %> / 5</p>
              <!-- Delete button with trash bin icon as a link -->
              <a href="/products/delete/<%= product._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">
                <i class="fas fa-trash-alt"></i> Delete
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
